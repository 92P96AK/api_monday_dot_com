{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "typeRoots": ["src/types", "node_modules/@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@utils": ["utils"],
      "@interfaces": ["interfaces"],
      "@infrastructure": ["infrastructure"],
      "@helper": ["helper"],
      "@constants": ["constants"],
      "@middlewares": ["api/middlewares"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
